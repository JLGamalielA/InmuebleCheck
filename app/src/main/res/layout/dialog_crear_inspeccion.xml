<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <!-- 1. Icono Centrado y Controlado -->
    <ImageView
        android:id="@+id/ivDialogIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/account"
        app:tint="@color/blue_primary"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nota: Cambié src a @drawable/account temporalmente porque mencionaste que esa imagen te daba problemas.
         Con scaleType="fitCenter" y medidas fijas (64dp), ya no se verá gigante.
         Si tienes @drawable/ic_launcher_foreground o similar, úsalo. -->

    <!-- 2. Título Centrado -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nueva Inspección"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDialogIcon" />

    <!-- 3. Campo Dirección -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDireccion"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Dirección del Inmueble"
        app:boxBackgroundColor="@android:color/transparent"
        app:boxStrokeColor="@color/blue_primary"
        app:boxStrokeWidth="1dp"
        app:hintTextColor="@color/gray_text"
        app:startIconTint="@color/blue_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 4. Selector de Agente -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAgente"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Seleccionar Agente"
        app:boxBackgroundColor="@android:color/transparent"
        app:boxStrokeColor="@color/blue_primary"
        app:boxStrokeWidth="1dp"
        app:hintTextColor="@color/gray_text"
        app:startIconTint="@color/blue_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilDireccion">

        <AutoCompleteTextView
            android:id="@+id/spinnerAgente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 5. Botón Crear -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCrear"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/blue_primary"
        android:text="Crear Inspección"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilAgente" />

    <!-- 6. Botón Cancelar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelar"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cancelar"
        android:textColor="@color/gray_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCrear" />

</androidx.constraintlayout.widget.ConstraintLayout>